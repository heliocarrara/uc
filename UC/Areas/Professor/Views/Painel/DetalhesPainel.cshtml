@model UC.Models.ViewModels.VMPainelProfessor
@{
    ViewBag.Title = "Painel Geral";
}

@if (Model.ListaTurmas != null && Model.ListaTurmas.Turmas != null)
{
    foreach (var cadaTurma in Model.ListaTurmas.Turmas)
    {
        <div class="panel panel-info panel-detalhes-turma">
            <div class="panel-heading panel-title-row">
                Turma @cadaTurma.Nome
            </div>
            <div class="row">
                <div class="btn-modalidade">
                    @Html.ActionLink("Detalhes", "Detalhes", "Turma", new { Area = "Comum", turmaUID = cadaTurma.turmaUID }, new { @class = "btn btn-info" })
                </div>
                <div class="btn-modalidade">
                    @Html.ActionLink("Incluir Aluno", "NovoDestaTurma", "Aluno", new { Area = "Cadastro", turmaUID = cadaTurma.turmaUID }, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="panel-body">
        <h3>Não há tumas disponíveis no momento.</h3>
    </div>
}

