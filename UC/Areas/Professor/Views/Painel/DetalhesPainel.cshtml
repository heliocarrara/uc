@model UC.Models.ViewModels.ListViewModels.VMListTurma

@{
    ViewBag.Title = "Painel Geral";
}

@if (Model.Turmas != null && Model.Turmas.Any())
{
    foreach (var cadaTurma in Model.Turmas)
    {
        <div class="panel panel-info panel-detalhes-turma">
            <div class="panel-heading panel-title-row">
                Turma @cadaTurma.Modalidade.nome - @cadaTurma.HorarioInicio.ToShortTimeString()
            </div>
            <div class="row">
                <div class="btn-modalidade">
                    @Html.ActionLink("Listar Aulas", "Listar", "Turma", new { Area = "Comum", turmaUID = cadaTurma.turmaUID }, new { @class = "btn btn-info" })
                </div>
                <div class="btn-modalidade">
                    @Html.ActionLink("Escolher", "NovoDestaTurma", "Aluno", new { Area = "Cadastro", turmaUID = cadaTurma.turmaUID }, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="panel-body">
        <h3>Não há tumas disponíveis no momento.</h3>
    </div>
}

