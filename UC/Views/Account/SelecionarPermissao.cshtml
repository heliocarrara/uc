@model List<UC.Models.ViewModels.VMPermissao>

<div class="panel-info">
    <div class="panel-heading">
        <h2><strong>Selecione um perfil:</strong></h2>
    </div>
    <div class="panel-body">
        @if (Model != null && Model.Any())
        {
            foreach (var cadaPermissao in Model)
            {
                <div class="panel-default">
                    <div class="panel-heading">
                        <h3><strong>Perfil: </strong>@cadaPermissao.tipoDeLogin</h3>
                    </div>
                    <div class="panel-body">
                        <h4>Expira em: @cadaPermissao.validade.ToShortDateString()</h4>
                    </div>
                    <div>
                        @Html.ActionLink("Selecionar", "MudarPermissao", "Account", new { Area = "", permissaoUID = cadaPermissao.permissaoUID }, new { @class = "btn btn-success" })
                    </div>
                </div>
                <br />
            }
        }
    </div>

</div>
