<nav id="nav">
    <div class="InfoItens">
        <ul>
            <!-- TODOS OS USUÁRIOS LOGADOS -->
            @if (UC.Utility.SimpleSessionPersister.IsLogged)
            {
                <li>
                    <span><strong>Usuário: </strong>@UC.Utility.SimpleSessionPersister.Username</span>
                </li>
                <li>
                    <span><span class="glyphicon glyphicon-home" aria-hidden="true"></span> @Html.ActionLink("Home", "Index", "Index", new { Area = UC.Utility.SimpleSessionPersister.UserRole }, null)</span>
                </li>
                if (UC.Utility.SimpleSessionPersister.UserHasOtherRoles)
                {
                    <li>
                        <span><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> @Html.ActionLink(" Alterar Perfil de Acesso", "AlterarPerfil", "Account", new { Area = string.Empty }, null)</span>
                    </li>
                }
            }
            else
            {
                <li>
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span><a href="https://ufmt.br">Portal da UFMT</a>
                </li>

                <li>
                    <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span> @Html.ActionLink("Visualização de Propostas Públicas", "Lista", "Proposta", new { @Area = "" }, new { title = "Link para a visualização pública de propostas" })
                </li>
                @*
                    <li>
                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span><a href="https://sistemas.ufmt.br/ufmt.portalsistemas">Portal de Sistemas Integrados UFMT</a>
                    </li>
                *@
            }
            <li>
                <span>
                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                    @Html.ActionLink("Dúvidas? Entre em contato", "Contato", "Home", new { Area = string.Empty }, new { title = "Link para área de contatos" })
                </span>
            </li>
        </ul>
    </div>

    <div class="NavOptions">
        <ul>
            @* TODOS OS USUARIOS LOGADOS *@
            @if (UC.Utility.SimpleSessionPersister.IsLogged)
            {
                <li><span class="left"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>@Html.ActionLink(" Sair", "LogOut", "Account", new { area = string.Empty }, null)</span></li>
            }
            else
            {
                <li><span class="left"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>@Html.ActionLink(" Login", "LogOn", "Account", new { area = string.Empty }, null)</span></li>
            }
        </ul>
    </div>
</nav>
