<div class="container-fluid">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>

        <a class="navbar-brand" href="@Url.Action("Index", "Home", new { Area = "" })" style="display: flex; align-items: center;">
            <img src="~/Content/img/logo.png" alt="Logo" style="height: 50px; margin-right: 10px;" />
            <span style="font-size:1.5em;">UC</span>
        </a>
    </div>
    <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Metas", "Lista", "Meta", new { Area = "Comum" }, null)</li>
            <li>@Html.ActionLink("Diário", "DetalharDia", "Cronograma", new { Area = "Comum" }, null)</li>
            <li>@Html.ActionLink("Em andamento", "Execucao", "ExecucaoMeta", new { Area = "Comum" }, null)</li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            @if (UC.Utility.SimpleSessionPersister.IsLogged)
            {
                var nome = "Olá, " + UC.Utility.SimpleSessionPersister.Username;

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        @nome <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Perfil", "Perfil", "Account", new { Area = "" }, null)</li>
                        <li>@Html.ActionLink("Sair", "LogOut", "Account", new { Area = "" }, null)</li>
                    </ul>
                </li>
            }
            else
            {
                <li>@Html.ActionLink("Login", "Login", "Home", new { Area = "" }, null)</li>
            }
        </ul>
    </div>
</div>

