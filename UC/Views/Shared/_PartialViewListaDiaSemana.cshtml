@model UC.Models.ViewModels.ListViewModels.VMListDiasDaSemana

<br />
<div class="panel panel-success panel-detalhes-turma">
    <div class="panel-heading panel-title-row">
        Dias da Semana
    </div>
    <div class="panel-body">
        <table class="table-bordered" style="min-width: 100%; text-align:center;">
            <thead>
                <tr style="line-height: 3em;">
                    <th style="text-align: center;">Dia da Semana</th>
                    <th style="text-align: center;">Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cadaDia in Model.DiasSemanais)
                {
                    <tr>
                        <td>@cadaDia.diaString</td>
                        <td>
                            @Html.ActionLink("Excluir", "ExcluirDia", "Turma", new { Area = "Cadastro", diasemanaturmaUID = cadaDia.diasemanaturmaUID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
    </div>
    @if (UC.Utility.SimpleSessionPersister.UserRole == "Coordenador" || UC.Utility.SimpleSessionPersister.UserRole == "Secretario")
    {

            @Html.ActionLink("Incluir Novo Dia", "NovoDiaSemanal", "Turma", new { turmaUID = Model.turmaUID, Area = "Cadastro" }, new { @class = "btn btn-success" })

    }
</div>

